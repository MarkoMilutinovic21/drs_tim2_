# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=mysql+pymysql://flight_user:flight_password@localhost:3306/flight_booking_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600

# Email Configuration (Gmail example)
# IMPORTANT: Google App Password MUST be 16 characters WITHOUT spaces!
# Wrong format:  abcd efgh ijkl mnop (with spaces)
# Right format:  abcdefghijklmnop (without spaces)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-16-char-app-password-without-spaces
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Flight Service URL
FLIGHT_SERVICE_URL=http://localhost:5001

# Login Security
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=900

# CORS
CORS_ORIGINS=http://localhost:5173

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True